// room script file

//Variables
int transp = 100;

function room_Load()
{
    gCharacterChange.Visible = false;
    gInventory.Visible = false;
    Mouse.Visible = false;
    
    cRee.Transparency = transp;
    cGames.Transparency = transp;
    cBonsai.Transparency = transp;
}

function room_AfterFadeIn()
{
    cLeftDragon.Move(213,  959, eNoBlock, eAnywhere);
    cRightDragon.Move(1708, 959, eBlock, eAnywhere);
    cTotem.Move(617,  875, eBlock, eAnywhere);
    
    while(transp > 0)
    {
        transp--;
        cRee.Transparency = transp;
        cGames.Transparency = transp;
        cBonsai.Transparency = transp;
        Wait(1);
    }
    
    Wait(40);
    
    cChad.ChangeRoom(1);
}
